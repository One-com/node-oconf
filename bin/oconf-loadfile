#!/usr/bin/env node
// ex: filetype=javascript

var loader = require('../lib/loader'),
    sys = require('sys'),
    optimist = require('optimist');

var argv = optimist
            .demand(1)
            .usage('Usage: $0 <filename.cjson>')
            .argv;

try {
    console.log(sys.inspect(loader(argv._[0], 99, false)));
} catch (error) {
    console.error("Error:", error.message);
}
